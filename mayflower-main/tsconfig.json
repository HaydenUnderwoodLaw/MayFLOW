{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "ESNext.Array", "ESNext.AsyncIterable", "ESNext.Intl", "ESNext.Symbol", "ESNext.BigInt"],
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "alwaysStrict": true,
    "pretty": true,
    "outDir": "./dist",
    "incremental": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "package.json"],
  "exclude": ["node_modules"]
}
